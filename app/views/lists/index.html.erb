<h2>All lists</h2>
<div class="cards">
  <% @lists.each do |l| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://unsplash.com/photos/jY9rX-E7ztU)">
      <p><%=l.name %> - Contains <%= l.movies.count %> 🎥</p>
      <%= link_to "See more", list_path(l), class: "btn btn-flat" %>
    </div>
  <% end  %>
</div>
